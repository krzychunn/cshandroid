<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_temperature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nn.krzychu.cloudsmarthome.TemperatureActivity">

    <TextView
        android:text="@string/temperatureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:text="@string/minTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setOptimalTemperature"
        android:layout_marginTop="22dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="@string/maxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/setMinimumTemperature"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/setMaximumTemperature"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/setMinimumTemperature" />


    <Button
        android:text="@string/saveTemperatureSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveTemperatureSettings"
        android:layout_alignBaseline="@+id/optimalTemperatureIsActive"
        android:layout_alignBottom="@+id/optimalTemperatureIsActive"
        android:layout_toEndOf="@+id/temperatureOutput" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_alignTop="@+id/minTemperature"
        android:layout_alignStart="@+id/setMinimumTemperature" />

    <TextView
        android:text="@string/heating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:id="@+id/heating" />

    <TextView
        android:text="@string/setOptimalTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setOptimalTemperature"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/heating"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/heating"
        android:layout_alignStart="@+id/textView17"
        android:id="@+id/textView21"
        android:textAppearance="@android:style/TextAppearance.Holo.Large" />

    <TextView
        android:text="@string/airCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:id="@+id/airCondition" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView24"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_alignTop="@+id/airCondition"
        android:layout_alignStart="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:layout_alignTop="@+id/maxTemperature"
        android:layout_alignStart="@+id/textView16" />

    <TextView
        android:text="@string/maxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxTemperature"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/minTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minTemperature"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/temperatureOutput"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureTimestamp"
        android:layout_below="@+id/temperatureOutput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureOutput"
        android:textAppearance="@android:style/TextAppearance.Material.Display2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/temperatureTitle"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="@string/optimalTemperatureIsActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optimalTemperatureIsActive"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/setMaximumTemperature"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/loadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/minTemperature"
        android:layout_alignParentStart="true"
        android:id="@+id/loadData"
        android:onClick="loadData" />

    <!--Dodane do testow usunac pozniej-->
    <TextView
        android:id="@+id/currentTemperature"
        android:layout_marginLeft="56dp"
        tools:text="Current temperature"
        android:layout_toRightOf="@+id/loadData"
        android:layout_alignBaseline="@+id/loadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

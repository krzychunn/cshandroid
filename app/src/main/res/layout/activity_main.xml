<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nn.krzychu.cloudsmarthome.MainActivity">

    <Button
        android:text="@string/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/light"
        android:layout_below="@+id/humidity"
        android:layout_alignEnd="@+id/humidity"
        android:onClick="openLightWindow" />

    <Button
        android:text="@string/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity"
        android:onClick="openHumidityWindow"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/temperature"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordText"
        android:layout_alignBottom="@+id/passwordInput"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/gas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gas"
        android:layout_marginTop="11dp"
        android:onClick="openGasWindow"
        android:layout_below="@+id/light"
        android:layout_alignStart="@+id/light" />

    <Button
        android:text="@string/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperature"
        android:onClick="openTemperatureWindow"
        android:layout_below="@+id/signIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:text="@string/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signIn"
        android:onClick="signIn"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/passwordText"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/appNameInput"
        android:layout_alignBottom="@+id/appName"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordInput"
        android:singleLine="false"
        android:layout_below="@+id/loginInput"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/loginInput"
        android:singleLine="false"
        android:layout_below="@+id/appNameInput"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginText"
        android:layout_above="@+id/passwordInput"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/appName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
